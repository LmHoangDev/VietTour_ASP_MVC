<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <style type="text/css">
        .wrapper {
            background: url('../../Content/Images/bg-body-viettour.jpg') no-repeat center;
            width: 100%;
            height: 100%;
            background-size: cover;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .dangky-trolai {
            background-color: #f41e1f;
            width: 150px;
            height: 57px;
            position: absolute;
            bottom: 82px;
            right: 70px;
            font-family: sans-serif;
            border: 1px solid #e82d2d;
            border-radius: 5%;
            font-size: 24px;
            text-align: center;
        }

            .dangky-trolai a {
                text-decoration: none;
                /* text-align: center; */
                color: white;
                display: block;
                padding: 12px 39px;
            }

        .form-group {
            padding: 0 50px;
            text-transform: uppercase;
        }

        h1.tieude {
            text-align: center;
            text-transform: uppercase;
            font-family: sans-serif;
            font-size: 26px;
            margin-bottom: 46px;
            color: #fc3d3d;
        }

        .form-group {
            display: flex;
            justify-content: space-between;
            margin-bottom: 30px;
        }


        .img-login {
            text-align: center;
            padding-bottom: 19px;
        }

        html, body {
            width: 100%;
            height: 100%;
            background-color: #f1f1f1;
        }

        .container-form {
            width: 550px;
            height: 600px;
            position: fixed;
            top: 42px;
            left: 32%;
            background-color: rgb(255 255 255 / 75%);
            border-radius: 4%;
            box-shadow: 0 0 0 0 #9c9a9a;
        }

        label {
            color: #3585f1;
        }

        input {
            font-size: 23px;
        }
        .form-group .tieude-dk{
            text-transform:none;
            font-family:sans-serif;
            color:#1b72f4;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <div class="container-form">
            
            @RenderBody()
        </div>

    </div>
</body>
</html>
