
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/HomeTestLayout.cshtml";
}
@using viettours.Models;
@using PagedList.Mvc;
@model PagedList.IPagedList<post>
<link href="~/Content/PagedList.css" rel="stylesheet" />

@section menulink{
    <aside id="bcn_widget-2" class="widget widget_breadcrumb_navxt catalyst-widget-area breadcrum_vt" style="margin-top:10px;">
        <div class="widget-wrap">
            <div class="breadcrumbs" vocab="https://schema.org/" typeof="BreadcrumbList">
                <!-- Breadcrumb NavXT 6.6.0 -->
                <span typeof="v:Breadcrumb"><a rel="v:url" property="v:title" title="Go to Viettours Incentives and Events." href="@Url.Action("TrangChu","Home")" class="home">Trang chủ</a></span> &gt; <span typeof="v:Breadcrumb"><span property="v:title">Tin du lịch</span></span>
            </div>
        </div>
    </aside>
}
@foreach (var item in Model)
{
    <aside class="khoi_post">
        <header class="entry-header">
            <h2 class="entry-title"><a href="@Url.Action("DisplayDetailPost","postss",new { id=item.id,title=item.title })">@item.title</a></h2>
        </header>
        <div class="entry-content">
            <a href="@Url.Action("DisplayDetailPost","postss",new { id=item.id,title=item.title })" title="@item.title"><img width="150" height="150" src="../Content/Post/@item.anh" class="alignleft wp-post-image" alt=""></a><p></p>
            <div class="at-above-post-cat-page addthis_tool" data-url="#"></div>
            <span style="display:block;font-size: 13px; font-family: sans-serif; max-height: 93px;min-height:93px; max-width: 541px; overflow: hidden;text-overflow: ellipsis;margin-top:10px;">
                @Html.Raw(item.mota)<span>[...]</span>
            </span>

            <div class="at-below-post-cat-page addthis_tool" data-url="#"></div>

            <p></p>
            <p> <a class="excerpt-read-more" href="@Url.Action("DisplayDetailPost","postss",new { id=item.id,title=item.title })" style="padding: 6px 10px; margin-top: 28px;">Xem tiếp</a></p>
        </div>
        <footer class="post-meta"><p></p></footer>
    </aside>

    @*  @Html.khoi_BaiViet(item)*@
}
@*  phân trang *@
<nav class="post-nav" style="text-align:center;height:60px;">
    <span style="color:#f40f0f;font-weight:600;font-family:sans-serif;;font-size:15px;">
        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    </span>
    @Html.PagedListPager(Model, page => Url.Action("displaypostbydm", new { page = page }))
</nav>





