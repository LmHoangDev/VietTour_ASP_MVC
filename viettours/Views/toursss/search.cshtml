
@using viettours.Custom_Helpers
@using viettours.Models;
@using PagedList.Mvc;
@model PagedList.IPagedList<tour>
<link href="~/Content/PagedList.css" rel="stylesheet" />
@{
    ViewBag.Title = "search";
    Layout = "~/Views/Layout/HomeTestLayout.cshtml";


}


@section menulink {

    <aside id="bcn_widget-2" class="widget widget_breadcrumb_navxt catalyst-widget-area breadcrum_vt" style="margin-top:10px;">
        <div class="widget-wrap">
            <div class="breadcrumbs" vocab="https://schema.org/" typeof="BreadcrumbList">
                <span typeof="v:Breadcrumb">
                    <a rel="v:url" property="v:title" title="Go to Viettours Incentives and Events." href="@Url.Action("TrangChu","Home")" class="home">Trang chủ</a>
                </span> &gt; <span typeof="v:Breadcrumb" />
                <a rel="v:url" property="v:title" title="Go to Tours." href="#" style="text-decoration:none;">Kết quả tìm kiếm Tours</a>

            </div>
        </div>
    </aside>
}

<header class="entry-header">
    <h1 class="entry-title" style="font-size: 15px; margin-top: -24px; color: red; font-weight: bold;">Kết quả tìm kiếm Tours</h1>
</header>
<form action="" method="post">
    <table style="margin-bottom:10px;">
        <tr>
            <td>
                Danh mục
            </td>
            <td>
                @Html.DropDownList("Searchmenu", null, "", new { @class = "js-wpv-filter-trigger" })
            </td>
            <td>
                Thời gian Tours
            </td>
            <td style="padding:0 12px;">
                @Html.DropDownList("Searchday", null, "", new { style = "width:157px;" })
                @* <select id="wpv_control_select_thoigiantours" name="" style="width:157px;" class="thoigian">
                        <option value="" selected="selected" class="js-wpv-filter-trigger  wpcf-form-option form-option option"></option>
                        <option value="1" class="js-wpv-filter-trigger  wpcf-form-option form-option option">1 đến 2 ngày</option>
                        <option value="2" class="js-wpv-filter-trigger  wpcf-form-option form-option option">2 đến 4 ngày</option>
                        <option value="3" class="js-wpv-filter-trigger  wpcf-form-option form-option option">5 đến 7 ngày</option>
                        <option value="4" class="js-wpv-filter-trigger  wpcf-form-option form-option option">8 đến 10 ngày</option>
                        <option value="5" class="js-wpv-filter-trigger  wpcf-form-option form-option option">Trên 10 ngày</option>
                    </select>*@
            </td>
            <td>
                <input type="submit" class="wpv-submit-trigger js-wpv-submit-trigger" name="wpv_filter_submit" value="Tìm kiếm">
            </td>
        </tr>
    </table>
</form>
<table width="100%" style="font-family:sans-serif;">
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>

                    @Html.khoi_Tour(item)
                </td>
            </tr>
        }
    </tbody>
</table>
<nav class="post-nav" style="text-align:center">
    <span style="color:#f40f0f;font-weight:600;font-family:sans-serif;;font-size:15px;">
        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    </span>
    @Html.PagedListPager(Model, page => Url.Action("search", new { page = page }))
</nav>
