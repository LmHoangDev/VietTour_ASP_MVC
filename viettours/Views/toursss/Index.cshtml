
@using viettours.Models;
@using PagedList.Mvc;
@using viettours.Custom_Helpers
@model PagedList.IPagedList<tour>
<link href="~/Content/PagedList.css" rel="stylesheet" />
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/HomeTestLayout.cshtml";
}
<style>

    * {
    }

    table .title-tour {
        font-weight: 600;
        font-size: 13px;
    }

    table .chitiettour {
        font-size: 13px;
    }

    .readmore_tour.xemtour {
        padding: 8px 16px;
    }
       @* .readmore_tour.xemtour a{

        }*@
    .tour_taxonomy_view strong {
        font-weight: 600;
        font-size: 14px;
    }

    span.tieude-tour {
        font-size: 14px;
    }
</style>
@section menulink {

    <aside id="bcn_widget-2" class="widget widget_breadcrumb_navxt catalyst-widget-area breadcrum_vt" style="margin-top:10px;">
        <div class="widget-wrap">
            <div class="breadcrumbs" vocab="https://schema.org/" typeof="BreadcrumbList">
                <span typeof="v:Breadcrumb">
                    <a rel="v:url" property="v:title" title="Go to Viettours Incentives and Events." href="@Url.Action("TrangChu","Home")" class="home">Trang chủ</a>
                </span> &gt; <span typeof="v:Breadcrumb">
                    <a rel="v:url" property="v:title" title="Go to Tours." href="#">Tours</a>
                </span> &gt; <span typeof="v:Breadcrumb">
                    <span property="v:title"> @ViewBag.tendm</span>
                </span>
            </div>
        </div>
    </aside>
}
<table width="100%" style="font-family:sans-serif;">
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.khoi_Tour(item)
                </td>
            </tr>
        }
    </tbody>
</table>

<nav class="post-nav" style="text-align:center;box-sizing:border-box;height:60px;">
    <span style="color:#f40f0f;font-weight:600;font-family:sans-serif;;font-size:15px;">
        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    </span>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { loai = ViewBag.loai,iddanhmuc=ViewBag.iddanhmuc, page = page }));
</nav>



