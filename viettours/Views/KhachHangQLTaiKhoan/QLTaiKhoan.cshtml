@model viettours.Models.account

@{
    ViewBag.Title = "QLTaiKhoan";
    Layout = "~/Views/Layout/HomeTestLayout.cshtml";

}
<h1 style="text-align:center;">Cài đặt tài khoản chung</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

